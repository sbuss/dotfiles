OSX_UNAME='Darwin'
LINUX_UNAME='Linux'

. $HOME/.bash/all_platforms.sh
. $HOME/.bash/aliases.sh

case `uname -r` in
  $OSX_UNAME)
    . $HOME/.bash/osx.sh
    ;;
  $LINUX_UNAME)
    . $HOME/.bash/linux.sh
    ;;
esac


# ctags - perform this from project root
alias tags="hash -r && ctags -R --python-kinds=-i ."
